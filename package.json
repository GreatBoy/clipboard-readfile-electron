{
	"name": "clipboard-readfile-electron",
	"version": "1.0.0",
	"description": "A nodejs addon, read or write file path for clipboard, support mac osx",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"directories": {
		"lib": "lib",
		"test": "test"
	},
	"binary": {
		"module_name": "binding",
		"module_path": "./lib/binding/",
		"package_name": "{node_abi}-{platform}-{arch}.tar.gz",
		"host": "https://github.com/alex8088/clipboard-files/releases/download/",
		"remote_path": "v{version}"
	},
	"keywords": [
		"clipboard",
		"files",
		"nwjs",
		"electron"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/alex8088/clipboard-files.git"
	},
	"scripts": {
		"test": "node ./test",
		"install": "node-pre-gyp install --fallback-to-build --build-from-source --update-binary"
	},
	"author": "alex.wei",
	"license": "MIT",
	"gypfile": true,
	"dependencies": {
		"@mapbox/node-pre-gyp": "^1.0.9",
		"nan": "^2.13.2"
	}
}
